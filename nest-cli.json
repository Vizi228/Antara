{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/sender/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/sender/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/sender",
  "projects": {
    "receiver": {
      "type": "application",
      "root": "apps/receiver",
      "entryFile": "main",
      "sourceRoot": "apps/receiver/src",
      "compilerOptions": {
        "tsConfigPath": "apps/receiver/tsconfig.app.json"
      }
    },
    "sender": {
      "type": "application",
      "root": "apps/sender",
      "entryFile": "main",
      "sourceRoot": "apps/sender/src",
      "compilerOptions": {
        "tsConfigPath": "apps/sender/tsconfig.app.json"
      }
    }
  }
}